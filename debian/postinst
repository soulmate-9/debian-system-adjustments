#!/bin/sh
# postinst script 
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#
update_gufw()
{
    # Make gufw icon visible
    if [ -e "/usr/share/applications/gufw.desktop" ]; then
        sed -i "s/OnlyShowIn=Unity;/OnlyShowIn=GNOME;MATE;/" /usr/share/applications/gufw.desktop
    fi
}

update_os_release()
{
    if [ -e /etc/os-release ]; then
        cp /usr/share/linuxmint/adjustments/base-files/os-release /etc/os-release
    fi
}

case "$1" in    
    configure|upgrade|update|reconfigure)
    update_gufw

    if [ -d /etc/skel/.opera ]; then
           rm -rf /etc/skel/.opera
    fi

    glib-compile-schemas /usr/share/glib-2.0/schemas

    /usr/share/debian-system-adjustments/grub/restore_10_linux_grub.py

    update_os_release
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;
    triggered)
    update_gufw
    update_os_release
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


